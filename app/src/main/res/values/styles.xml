<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTheme.Toolbar">
        <item name="android:textSize">@dimen/text24</item>
    </style>

    <!-- Make the status bar translucent -->
    <style name="AppTheme.NoActionBar.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Selectable">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.Toolbar.Button" parent="Selectable">
        <item name="android:layout_width">@dimen/icon48</item>
        <item name="android:layout_height">@dimen/icon48</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppTheme.Toolbar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing16</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="OnBoardingTheme" parent="AppTheme.NoActionBar.Translucent">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!-- hamburger menu icon color -->
    <style name="DrawerIconStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <style name="cardIconText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/spacing16</item>
        <item name="android:drawablePadding">@dimen/spacing4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text12</item>
    </style>
</resources>
