<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@color/navbar</item>
    </style>

    <style name="VisibleNavigation" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.Toolbar">
        <item name="android:textSize">@dimen/text24</item>
    </style>

    <!-- Make the status bar translucent -->
    <style name="AppTheme.NoActionBar.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Selectable">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.Toolbar.Button" parent="Selectable">
        <item name="android:layout_width">@dimen/icon48</item>
        <item name="android:layout_height">@dimen/icon48</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppTheme.Toolbar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing16</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="OnBoardingTheme" parent="AppTheme.NoActionBar.Translucent">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!-- hamburger menu icon color -->
    <style name="DrawerIconStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="CardIconText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/spacing16</item>
        <item name="android:drawablePadding">@dimen/spacing4</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text12</item>
    </style>

    <style name="NavigationItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navItem_height</item>
        <item name="android:paddingTop">@dimen/spacing8</item>
        <item name="android:paddingBottom">@dimen/spacing8</item>
        <item name="android:layout_marginTop">@dimen/spacing16</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Logging">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text20</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Logging.Input">
        <item name="android:background">@drawable/line_edit_text</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingBottom">@dimen/spacing12</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="Logging.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CustomImageDialogRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/spacing8</item>
        <item name="android:paddingBottom">@dimen/spacing8</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CustomImageDialogIcon" parent="WrapContent"/>

    <style name="CustomImageDialogText" parent="WrapContent">
        <item name="android:layout_marginStart">@dimen/spacing20</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="EventAboutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing8</item>
    </style>

    <style name="EventTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing16</item>
        <item name="android:textSize">@dimen/text20</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing16</item>
    </style>

    <style name="EventDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing8</item>
        <item name="android:layout_marginEnd">@dimen/spacing16</item>
    </style>

    <style name="AddEventItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing8</item>
    </style>

    <style name="SettingsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing24</item>
    </style>

    <style name="SettingsNotificationText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing16</item>
    </style>

    <style name="SettingsNotificationSwitch" parent="WrapContent"/>

    <style name="SettingsPasswordDialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing4</item>
    </style>

    <style name="SettingsReminderButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:paddingLeft">@dimen/spacing4</item>
        <item name="android:colorControlNormal">@color/bgColor</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:paddingTop">@dimen/spacing16</item>
        <item name="android:paddingBottom">@dimen/spacing16</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="SettingsReminderLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/bgColor</item>
    </style>

    <style name="FilterSubTitle" parent="WrapContent">
        <item name="android:layout_marginStart">@dimen/spacing8</item>
        <item name="android:layout_marginTop">@dimen/spacing24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text16</item>
    </style>

    <style name="FilterTimeLayout" parent="WrapContent">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@color/bgColor</item>
    </style>

    <style name="FilterTimeDesc" parent="WrapContent">
        <item name="android:textSize">@dimen/text12</item>
    </style>

    <style name="FilterTimeSelect" parent="WrapContent">
        <item name="android:layout_marginTop">@dimen/spacing8</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
