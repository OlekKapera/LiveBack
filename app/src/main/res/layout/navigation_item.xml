<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_container_row"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/navigation_item_image"
        android:layout_width="@dimen/icon24"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/icon24"
        android:layout_marginStart="@dimen/spacing32"
        app:srcCompat="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/navigation_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Events"
        android:gravity="center"
        android:textSize="@dimen/text24"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/spacing48"/>
</LinearLayout>