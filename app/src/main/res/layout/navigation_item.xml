<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_container_row"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/navigation_item_image"
        android:layout_width="@dimen/icon36"
        android:layout_height="@dimen/icon36"
        android:layout_marginStart="@dimen/spacing32"
        android:layout_marginTop="@dimen/spacing64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/navigation_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Events"
        android:textSize="@dimen/text28"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/spacing64"
        app:layout_constraintBottom_toBottomOf="@+id/navigation_item_image"
        app:layout_constraintStart_toEndOf="@+id/navigation_item_image"
        app:layout_constraintTop_toTopOf="@+id/navigation_item_image" />
</android.support.constraint.ConstraintLayout>