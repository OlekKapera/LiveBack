<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/spacing16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backgroundImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_height"
            android:scaleType="centerCrop"
            android:src="@drawable/green_nature" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImg"
            android:src="@drawable/mari_profile"
            android:layout_alignBottom="@+id/nameDateContainer"
            android:layout_width="@dimen/card_profile_size"
            android:layout_height="@dimen/card_profile_size" />

        <LinearLayout
            android:id="@+id/nameDateContainer"
            android:layout_toRightOf="@+id/profileImg"
            android:layout_below="@+id/backgroundImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Mari Sheibley"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:text="24 Nov 2018"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>